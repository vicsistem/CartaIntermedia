<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondocarta4">
    <TextView
        android:text="CARTA INTERMEDIA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/textView1"
        android:textSize="46dp"
        android:textAlignment="center"
        android:textColor="#ffe6641d" />
    <TextView
        android:text="Numero Sala"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView12"
        android:textColor="#fffae5e5"
        android:textAlignment="center" />
    <TextView
        android:text="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtVistaNumeroSala"
        android:textColor="#fffae5e5"
        android:textAlignment="center" />
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="32.0dp"
        android:id="@+id/linearLayout1"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:gravity="center">
        <TextView
            android:text="JUGADOR 1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/txtJugador1"
            android:textSize="15dp"
            android:textColor="#ffe8dcda"
            android:layout_marginRight="8.0dp" />
        <TextView
            android:text="JUGADOR 2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/txtJugador2"
            android:textSize="15dp"
            android:textColor="#ffe4d9cc"
            android:layout_marginLeft="8.5dp"
            android:layout_marginRight="5.0dp" />
        <TextView
            android:text="JUGADOR 3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/txtJugador3"
            android:textSize="15dp"
            android:textColor="#ffe4ddd4"
            android:layout_marginRight="4.0dp"
            android:layout_marginLeft="5.0dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="25.5dp"
        android:id="@+id/linearLayout2"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginBottom="10.5dp">
        <TextView
            android:text="Text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textView9"
            android:layout_marginRight="61.5dp"
            android:textColor="#ffe6e4e4" />
        <TextView
            android:text="Text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textView10"
            android:layout_marginRight="57.0dp"
            android:layout_marginLeft="0.0dp"
            android:textColor="#fff2e0e0" />
        <TextView
            android:text="Text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textView11"
            android:textColor="#ffe9d9d9" />

    </LinearLayout>
    <TextView
        android:text="Turno de Jugador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtJugadorTurnoNombre"
        android:foregroundGravity="center"
        android:gravity="center"
        android:textColor="#fff3dddd"
        android:layout_marginBottom="12.5dp" />
    <TextView
        android:text="Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtJugadorTurno"
        android:foregroundGravity="center"
        android:gravity="center"
        android:textColor="#fff3dddd" />
    <EditText
        android:inputType="textMultiLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText1"
        android:textColor="#ffebdcdc" />
    <Button
        android:text="Repartir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnRepartir"
        android:layout_gravity="center"
        android:backgroundTint="#ffaa5f36"
        android:gravity="center" />
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="149.5dp"
        android:id="@+id/segmento"
        android:gravity="center">
        <TextView
            android:layout_width="102.0dp"
            android:layout_height="match_parent"
            android:id="@+id/textView6"
            android:background="@drawable/cartaatras" />
        <TextView
            android:layout_width="100.0dp"
            android:layout_height="match_parent"
            android:id="@+id/textView7"
            android:layout_marginLeft="15.5dp"
            android:layout_marginRight="15.0dp"
            android:background="@drawable/cartaatras" />
        <TextView
            android:layout_width="101.5dp"
            android:layout_height="match_parent"
            android:id="@+id/textView8"
            android:background="@drawable/cartaatras" />
    </LinearLayout>
    <Button
        android:text="Jugar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#ffaa5f36"
        android:id="@+id/btnJugar" />

</LinearLayout>
