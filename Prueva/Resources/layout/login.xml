<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondojocker">
    <TextView
        android:text="Login"
        android:layout_width="match_parent"
        android:layout_height="49.5dp"
        android:id="@+id/textologin"
        android:layout_marginBottom="19.5dp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textColor="#ffdc0c0c"
        android:textStyle="bold" />
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout1"
        android:layout_marginLeft="12.5dp"
        android:layout_marginRight="18.0dp"
        android:layout_marginBottom="25.5dp">
        <TextView
            android:text="USUARIOS"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textoUsuario"
            android:textAlignment="center"
            android:textColor="@android:color/background_dark"
            android:textSize="20dp"
            android:textStyle="bold" />
        <EditText
            android:inputType="textMultiLine"
            android:layout_width="196.0dp"
            android:layout_height="match_parent"
            android:id="@+id/txtUsuariol"
            android:layout_marginRight="0.0dp"
            android:layout_marginLeft="22.5dp" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout2"
        android:layout_marginLeft="12.0dp"
        android:layout_marginRight="10.5dp">
        <TextView
            android:text="CONTRASEÑA"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textoContrasenia"
            android:textAlignment="center"
            android:textColor="#ff1b1515"
            android:textSize="20dp"
            android:textStyle="bold" />
        <EditText
            android:inputType="textMultiLine"
            android:layout_width="196.5dp"
            android:layout_height="match_parent"
            android:id="@+id/txtContraseñal" />
    </LinearLayout>
    <Button
        android:text="Ingresar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnIngresarl" />
</LinearLayout>
