<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/images">
    <TextView
        android:text="Ingresar sala"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/textView1"
        android:textSize="25dp"
        android:textAlignment="center"
        android:textColor="#ffe9e8e8" />
    <EditText
        android:inputType="textMultiLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtINGRESAR_SALA"
        android:textColor="#fffff7f7" />
    <TextView
        android:text="Fondo de mesa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/textView2"
        android:textSize="25dp"
        android:textAlignment="center"
        android:textColor="#ffe9e8e8" />
    <EditText
        android:inputType="textMultiLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtFONDO_MESA"
        android:textColor="#fffff7f7" />
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="48.0dp"
        android:id="@+id/linearLayout1" >
        <Spinner
            android:layout_width="118.5dp"
            android:layout_height="match_parent"
            android:id="@+id/spinner1" />
        <Spinner
            android:layout_width="127.5dp"
            android:layout_height="match_parent"
            android:id="@+id/spinner2" />
        <Spinner
            android:layout_width="120.5dp"
            android:layout_height="match_parent"
            android:id="@+id/spinner3" />
    </LinearLayout>
    <Button
        android:text="crear sala"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnCREAR_SALA" />

</LinearLayout>
